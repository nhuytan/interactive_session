<tool id='Matthew.Shaxted_interactive_session' name='Matthew.Shaxted_interactive_session'>
  <command interpreter='bash'>main.sh</command>
  <inputs>
    <param name='service_name' label='Service' type='hidden' value='turbovnc' width='50%_none'></param>
    <param name='novnc_dir' label='Default noVNC installation directory' type='hidden' value='__poolworkdir__/pw/bootstrap/noVNC-1.3.0' width='50%_none'></param>
    <param name='novnc_tgz' label='Path to noVNC TGZ' type='hidden' value='/swift-pw-bin/apps/noVNC-1.3.0.tgz' width='50%_none'></param>
    <section name='service' type='section' title='Matlab Inputs' expanded='true'>
      <param name='slurm_module' label='Module name' type='text' help='Module to load with [module load]' value='matlab' width='50%_none'></param>
      <param name='service_bin' label='Service binary' type='hidden' value='matlab -desktop' width='50%_none'></param>
    </section>
    <section name='host' type='section' title='Matlab Host' expanded='true'>
      <conditional name="jobschedulertype_cond">
          <param name='jobschedulertype' type='select' label='Select Controller, SLURM Partition or PBS Queue' help='Job will submitted using SSH, sbatch or qsub, respectively' width='50%_none' multiple='false'>
            <option value="CONTROLLER">Controller</option>
            <option value="SLURM" selected="true">SLURM Partition</option>
        </param>
        <when value="SLURM">
            <param name='_sch__dd_partition_e_' label='SLURM partition' type='text' help='Partition to submit the interactive job. Leave empty to let SLURM pick the optimal option.' value='' width='50%_none'>
            </param>
            <param name='_sch__dd_cpus_d_per_d_task_e_' label='CPUs per task' type='integer' min="1" max="10" help='--cpus-per-task=value slurm directive' value='1' width='50%_none'>
            </param>
            <param name='_sch__dd_mem_d_per_d_cpu_e_' label='Minimum memory required per usable allocated CPU' type='text' help='--mem-per-cpu=value slurm directive' value='8G' width='50%_none'>
            </param>   
            <param name='_sch__dd_time_e_' label='Walltime' type='text' help='e.g. 01:00:00 - Amount of time slurm will honor the interactive session.' value='01:00:00' width='50%_none'>
            </param>
            <param name='scheduler_directives' label='Scheduler directives' type='text' help='e.g. --mem=1000;--gpus-per-node=1 - Use the semicolon character ; to separate parameters. Do not include the SBATCH keyword.' value='--get-user-env;--export=ALL' width='100%_none'>
            </param>
        </when>
      </conditional>
    </section>
  </inputs>
  <outputs>
  </outputs>
</tool>
